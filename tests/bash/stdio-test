#!/usr/bin/env bash

cd "$(dirname "$0")/../.." || exit

test_state() {
    actual="$(./bin/krab stdio-state 'Hi, there!' 2>&1 > /dev/null)"
    expected=$(printf "\n\033[0;47m  \033[0;1;37m Hi, there!\033[0m\n\n")
    assertEquals "$expected" "$actual"
}

test_inform() {
    actual="$(./bin/krab stdio-inform 'Hi, there!' 2>&1 > /dev/null)"
    expected=$(printf "\n\033[0;46m  \033[0;1;36m Hi, there!\033[0m\n\n")
    assertEquals "$expected" "$actual"
}

test_confirm() {
    actual="$(./bin/krab stdio-confirm 'Hi, there!' 2>&1 > /dev/null)"
    expected=$(printf "\n\033[0;42m  \033[0;1;32m Hi, there!\033[0m\n\n")
    assertEquals "$expected" "$actual"
}

test_alert() {
    actual="$(./bin/krab stdio-alert 'Hi, there!' 2>&1 > /dev/null)"
    expected=$(printf "\n\033[0;41m  \033[0;1;31m Hi, there!\033[0m\n\n")
    assertEquals "$expected" "$actual"
}

. ./vendor/shunit2/shunit2